@model IEnumerable<ETicket.Models.Securitys>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="overflow-scroll">
    <table class="table table-bordered">
        <tr class="table-secondary">
            <th>
                @Html.Partial("~/Views/PartialViews/_PartialFormCreate.cshtml")
                @Html.ActionLink(ActionService.Return, ActionService.Index, "MSECP001_PrgSecurity", new { area = ActionService.Area }, new { @class = "btn btn-warning" })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TargetNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TargetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAdd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEdit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDelete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsConfirm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsUndo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsInvalid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsUpload)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDownload)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPrint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remark)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            ActionService.RowId = item.Id;
            ActionService.RowData = (item.TargetNo == null) ? "" : $"{item.TargetNo} {item.TargetName}";
            <tr>
                <td>
                    @Html.Partial("~/Views/PartialViews/_PartialFormEdit.cshtml")
                    @Html.Partial("~/Views/PartialViews/_PartialFormDelete.cshtml")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TargetNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TargetName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsEdit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDelete)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsConfirm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsUndo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsInvalid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsUpload)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDownload)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPrint)
                </td>
                <td class="table-wrap">
                    @Html.DisplayFor(modelItem => item.Remark)
                </td>
            </tr>
        }
    </table>
</div>