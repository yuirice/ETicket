@using PagedList;
@using PagedList.Mvc;

<div class="row">
    <div class="col-md-12">
        <div class="float-start">
            @Html.PagedListPager((IPagedList)Model.DetailModel, x => Url.Action(ActionService.Index, ActionService.Controller, new { area = ActionService.Area, page = x }))
        </div>
        <div class="float-start page-info pt-4 ps-2">
            @ViewBag.PageInfo
        </div>
        <div class="float-end">
            <div class="mt-3">
                @using (Html.BeginForm(ActionService.Search, ActionService.Controller, new { area = ActionService.Area }, FormMethod.Post))
                {
                    <table>
                        <tr>
                            <td>
                                <span class="control-label fw-bold">查詢條件：</span>
                            </td>
                            <td class="pr-2">
                                <input id="@ActionService.SearchText" name="@ActionService.SearchText" type="text" class="form-control data-list-search-text" placeholder="請輸入查詢條件..." value="@ViewBag.SearchText" style="width:200px;" />
                            </td>
                            <td>
                                <input type="submit" value="查詢" class="btn btn-primary" />
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
